<!-- Home Page
==========================================-->
<div id="tf-home" class="text-center">
  <div class="overlay">
    <div class="content">
      <h1 translate="WELCOME_TITLE"></h1>
      <p translate="WELCOME_DESCRIPTION" class="lead"></p>
