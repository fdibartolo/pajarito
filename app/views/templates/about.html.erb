<div id="tf-about">
  <div class="overlay">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <%= image_tag "map.png", class: "img-responsive" %>
        </div>
        <div class="col-md-6">
          <div class="about-text">
            <div class="section-title">
              <h4 translate="ABOUT_TITLE"></h4>
              <h2 translate="ABOUT_SUBTITLE"></h2>
              <hr>
              <div class="clearfix"></div>
            </div>
