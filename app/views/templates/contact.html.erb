<div id="tf-contact" class="text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="section-title center">
          <h2 translate="CONTACT_TITLE"></h2>
          <div class="line"><hr></div>
          <div class="clearfix"></div>
          <small><em translate="CONTACT_SUMMARY"></em></small>
        </div>
        <form class="form-horizontal" ng-submit="submitQuestion()">
          <div class="form-group" ng-class="{'has-error': question.invalidName}">
            <label class="col-sm-2 control-label">{{"CONTACT_NAME" | translate}}</label>
            <div class="col-sm-10 text-left">
              <input type="text" class="form-control" ng-model="question.name" placeholder="{{'CONTACT_NAME_PLACEHOLDER' | translate}}">
              <small ng-if="question.invalidName" class="text-danger">
                {{"CONTACT_NAME_INVALID" | translate}}
              </small>            
            </div>
          </div>
          <div class="form-group" ng-class="{'has-error': question.invalidEmail}">
            <label class="col-sm-2 control-label">{{"CONTACT_EMAIL" | translate}}</label>
            <div class="col-sm-10 text-left">
              <input type="email" class="form-control" ng-model="question.email" placeholder="{{'CONTACT_EMAIL_PLACEHOLDER' | translate}}">
              <small ng-if="question.invalidEmail" class="text-danger">
                {{"CONTACT_EMAIL_INVALID" | translate}}
              </small>            
            </div>
          </div>
          <div class="form-group" ng-class="{'has-error': question.invalidMessage}">
            <label for="inputMessage" class="col-sm-2 control-label">{{"CONTACT_MESSAGE" | translate}}</label>
            <div class="col-sm-10 text-left">
              <textarea class="form-control" rows="4" ng-model="question.message" placeholder="{{'CONTACT_MESSAGE_PLACEHOLDER' | translate}}"></textarea>
              <small ng-if="question.invalidMessage" class="text-danger">
                {{"CONTACT_MESSAGE_INVALID" | translate}}
              </small>            
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button type="submit" class="btn tf-btn btn-default">{{"CONTACT_SUBMIT" | translate}}</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
