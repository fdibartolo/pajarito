<!DOCTYPE html>
<html ng-app="gaviotas" ng-controller="MainController" ng-init="init()">
<head>
  <meta charset="utf-8">
  <!--[if IE]><meta http-equiv="x-ua-compatible" content="IE=9" /><![endif]-->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Gaviotas</title>
  <meta name="description" content="TBD">
  <meta name="keywords" content="tbd, tbd, tbd">
  <meta name="author" content="fdibartolo">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- Favicons
  ================================================== -->
  <!-- <link rel="shortcut icon" href="img/favicon.ico" type="image/x-icon"> -->
  <link rel="apple-touch-icon" href="img/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="img/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="114x114" href="img/apple-touch-icon-114x114.png">
</head>
<body scroll-menu-spy>
  <!-- Navigation
  ==========================================-->
  <nav id="tf-menu" class="navbar navbar-default navbar-fixed-top">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand page-scroll" href="#tf-home">{{siteName}}</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#tf-home" page-scroll translate="MENU_HOME"></a></li>
          <li><a href="#tf-services" page-scroll translate="MENU_SERVICES"></a></li>
          <li><a href="#tf-about" page-scroll translate="MENU_DIRECTIONS"></a></li>
          <li><a href="#tf-photos" page-scroll translate="MENU_PHOTOS"></a></li>
          <li><a href="#tf-testimonials" page-scroll translate="MENU_TESTIMONIALS"></a></li>
          <li><a href="#tf-contact" page-scroll translate="MENU_CONTACT"></a></li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-flag-o" style="font-size:130%"></i> <span>{{getLanguage()}}</span> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li ng-repeat="language in languages">
                <a ng-click="setLanguage(language.key)">{{language.name}}</a>
              </li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <toaster-container toaster-options="{'position-class': 'toast-top-full-width'}"></toaster-container>
  <%= yield %>

  <nav id="footer">
    <div class="container">
      <div class="pull-left fnav">
        <p>ALL RIGHTS RESERVED. COPYRIGHT Â© 2015</p>
      </div>
      <div class="pull-right fnav">
        <div class="developer">developed with <span class="fa fa-heart"></span> by <a href="https://twitter.com/fdibartolo?lang=es" target="_blank">me</a></div>
        <!-- <ul class="footer-social"> -->
          <!-- <li><a href="#"><i class="fa fa-facebook"></i></a></li> -->
          <!-- <li><a href="#"><i class="fa fa-google-plus"></i></a></li> -->
          <!-- <li><a href="#"><i class="fa fa-twitter"></i></a></li> -->
        <!-- </ul> -->
      </div>
    </div>
  </nav>
</body>
</html>
