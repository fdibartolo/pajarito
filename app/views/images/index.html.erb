<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>
<div class="pull-right"><%= link_to 'New Image', new_image_path, class: 'btn btn-primary' %></div>
<br>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Categories</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <% c = image.visible ? 'visible' : 'not-visible' %>
      <tr>
        <td><%= image_tag(image.path, width: '100', class: c) %></td>
        <td><%= image.categories %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
